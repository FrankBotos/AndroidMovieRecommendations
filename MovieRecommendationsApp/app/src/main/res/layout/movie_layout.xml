<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_select_all_black_24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Superman!"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/movieSeen"
        android:layout_toStartOf="@id/movieSeen" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="This is the plot of the movie!This is the plot of the movie!This is the plot of the movie!This is the plot of the movie!"
        android:id="@+id/plot"
        android:layout_below="@+id/title"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Metascore: 45"
        android:id="@+id/metascore"
        android:layout_below="@+id/imageView"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="[genres, genres, genres]"
        android:id="@+id/genre"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/plot"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/movieSeen"
        android:src="@drawable/ic_add_circle_black_24dp"
        android:layout_alignTop="@+id/title"
        android:layout_alignRight="@+id/plot"
        android:layout_alignEnd="@+id/plot"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />




    <ImageView
        android:id="@+id/rated1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/genre"
        android:layout_toLeftOf="@+id/rated2"
        android:layout_toStartOf="@+id/rated2"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/rated2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/genre"
        android:layout_toLeftOf="@+id/rated3"
        android:layout_toStartOf="@+id/rated3"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/rated3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/genre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/rated4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/genre"
        android:layout_toRightOf="@+id/rated3"
        android:layout_toEndOf="@+id/rated3"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:id="@+id/rated5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_black_48dp"
        android:layout_below="@+id/genre"
        android:layout_toRightOf="@+id/rated4"
        android:layout_toEndOf="@+id/rated4"
        android:layout_marginTop="5dp"/>







</RelativeLayout>